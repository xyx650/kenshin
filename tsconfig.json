{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["dom"],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@@/*": [
        "src/.umi/*"
      ]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src",
    "src/setupTests.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "docs",
    "site",
    "es",
    "lib",
    "types",
    "test",
    "**/__test__"
  ]
}
